<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Permissions Demo"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btnGetOnePermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get One Permission" />

    <Button
        android:id="@+id/btnGetMultiplePermissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Multiple Permissions" />

    <TextView
        android:id="@+id/tvResultsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Results go here"
        android:textSize="18sp"/>

</LinearLayout>
